set nocompatible

set number

set laststatus=2

set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

set hlsearch
set incsearch

set wildmode=longest:list,full

set backspace=indent,eol,start

if filereadable(expand("$HOME/.vim/vundle.vim"))
  source $HOME/.vim/vundle.vim
endif

map <space> <Leader>

noremap <Left> <NOP>
noremap <Right> <NOP>
noremap <Up> <NOP>
noremap <Down> <NOP>

nnoremap <Leader>n :nohlsearch<CR>
inoremap jk <Esc>
