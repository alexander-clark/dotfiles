rtest() {
  if [ -d spec ]; then
    bundle exec rspec "$*";
  elif [ -d test ]; then
    bundle exec ruby -I "lib:test" "$*";
  else
    echo "Test directory not found"
  fi
}

get_keychain_pw () {
  security find-generic-password -a "$USER" -s "$1" -w
}

hitch() {
  command hitch "$@"
  if [[ -s "$HOME/.hitch_export_authors" ]] ; then source "$HOME/.hitch_export_authors" ; fi
}

